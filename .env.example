# Environment variables for Vercel deployment
# Copy this file to .env.local and fill in the values

# Database - Keep your existing Neon PostgreSQL connection string
DATABASE_URL=your_neon_postgresql_connection_string

# Session secret for authentication
SESSION_SECRET=your_secure_session_secret_here

# SendGrid API key for email notifications (optional)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Google Sheets API credentials (optional)
GOOGLE_SHEETS_CLIENT_EMAIL=your_google_client_email
GOOGLE_SHEETS_PRIVATE_KEY=your_google_private_key

# Node environment
NODE_ENV=production